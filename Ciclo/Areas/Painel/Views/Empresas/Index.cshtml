@model List<Biblioteca.Entidades.Empresas>

@{
    ViewBag.Title = "Empresas";
}

<div class="tg-bgparallax">
    <div class="container">
        <div class="tg-innerbannercontent">
            <div class="tg-pagetitle">
                <h1>@Html.Action("Usuario", "Painel")</h1>
            </div>
            <ol class="tg-breadcrumb">
                <li><a href="~/Painel">Dashboard</a></li>
                <li class="tg-active">Cadastros</li>
                <li class="tg-active">Empresas</li>
            </ol>
        </div>
    </div>
</div>

<main id="tg-main" class="tg-main tg-haslayout">
    <div class="tg-sectionspace">
        <div class="container">

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <input type="text" id="filtro_pesquisa" name="filtro_pesquisa" value="@ViewBag.filtro" />&nbsp;<button class="tg-btn" type="button" id="pesquisa_empresa">Localizar</button>
                    &nbsp;<button class="tg-btn" type="button" onclick="EmpresasTodos();">Todos</button>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-right">
                    <button class="tg-btn" type="button" onclick="Empresas(0);">Novo</button>
                    &nbsp;
                    <button class="tg-btn" type="button" onclick="EmpresaAlterar()">Alterar</button>
                    &nbsp;
                    <button class="tg-btn" type="button" onclick="EmpresaExcluir()">Excluir</button>
                </div>
            </div>
            <div class="row pt">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="3%"><input type="checkbox" id="selectall" name="selectall" /></th>
                                <th width="36%">EMPRESA</th>
                                <th width="15%">CNPJ</th>
                                <th width="31%">E-MAIL</th>
                                <th width="15%">TELEFONE</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <th scope="row"><input type="checkbox" id="ident" name="ident" value="@p.idempresa" /></th>
                                    <td>@p.txempresa</td>
                                    <td>@p.txcnpj</td>
                                    <td>
                                        @foreach (var e in p.txemail)
                                        {
                                            @e.txemail<br />
                                        }
                                    </td>
                                    <td>
                                        @foreach (var t in p.txtelefone)
                                        {
                                            @t.txtelefone
                                            if (t.flwhatsapp == 1)
                                            {
                                                @Html.Raw("<a style='color:#006400 !important' href='https://api.whatsapp.com/send?phone=55" + t.txtelefone.Replace("(", "").Replace(")", "").Replace("-", "").Replace(" ", "") + "' target='_blank'> <i class='fa fa-whatsapp'></i></a>");
                                            }
                                            <br />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            @Html.Partial("~/Areas/Painel/Views/Painel/Paginacao.cshtml")
        </div>
    </div>
</main>


@section scripts {
    @Scripts.Render("~/bundles/empresas")
}


