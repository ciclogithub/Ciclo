                                            <th width="3%"><input type="checkbox" id="selectall" name="selectall" /></th>
                                            <th width="33%">TEMA</th>
                                            <th width="32%">SUBTÍTULO</th>
                                            <th width="32%">DESCRIÇÃO</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var p in Model)
                                        {
                                            <tr>
                                                <td>@p.curso</td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                break;

                            // Categorias
                            case 2:

                                @: <table class="table table-bordered table-hover">
