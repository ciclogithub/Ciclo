@model List<Biblioteca.Entidades.Alunos>

@{
    ViewBag.Title = "Alunos";
}

<div class="tg-bgparallax">
    <div class="container">
        <div class="tg-innerbannercontent">
            <div class="tg-pagetitle">
                <h1>@Html.Action("Usuario", "Painel")</h1>
            </div>
            <ol class="tg-breadcrumb">
                <li><a href="~/Painel">Dashboard</a></li>
                <li class="tg-active">Alunos</li>
            </ol>
        </div>
    </div>
</div>

<main id="tg-main" class="tg-main tg-haslayout">
    <div class="tg-sectionspace">
        <div class="container">

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <input type="text" id="aluno" name="aluno" value="@ViewBag.aluno" />&nbsp;<button class="tg-btn" type="button" id="pesquisa_aluno">Localizar</button>
                    &nbsp;<button class="tg-btn" type="button" onclick="AlunosTodos();">Todos</button>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-right">
                    <button class="tg-btn" type="button" onclick="Alunos(0);">Novo</button>
                    &nbsp;
                    <button class="tg-btn" type="button" onclick="AlunoAlterar()">Alterar</button>
                    &nbsp;
                    <button class="tg-btn" type="button" onclick="AlunoExcluir()">Excluir</button>
                </div>
            </div>
            <div class="row pt">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="3%"><input type="checkbox" id="selectall" name="selectall" /></th>
                                <th width="2%">&nbsp;</th>
                                <th width="30%">ALUNO</th>
                                <th width="15%">CPF</th>
                                <th width="31%">E-MAIL</th>
                                <th width="15%">TELEFONE</th>
                                @*<th width="4%"><img src="~/images/diagweb-32x32.png" title="Possui cadastro no Diagweb" /></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <th scope="row"><input type="checkbox" id="ident" name="ident" value="@p.idaluno" /></th>
                                    <td class="@p.txcor.Replace(" ","_")">&nbsp;</td>
                                    <td>@p.txaluno</td>
                                    <td>@p.txcpf</td>
                                    <td>
                                        @foreach (var e in p.txemail)
                                        {
                                            @e.txemail<br />
                                        }
                                    </td>
                                    <td>
                                        @foreach (var t in p.txtelefone)
                                        {
                                            @t.txtelefone
                                            if (t.flwhatsapp == 1)
                                            {
                                                @Html.Raw("<a style='color:#88e55b !important' href='https://api.whatsapp.com/send?phone=55" + t.txtelefone.Replace("(", "").Replace(")", "").Replace("-", "").Replace(" ", "") + "' target='_blank'> <i class='fa fa-whatsapp'></i></a>");
                                            }
                                            <br />
                                        }
                                    </td>
                                    @*<td></td>*@
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            @{
                int min = 0;
                int max = 0;
                int pmin = 0;
                int pmax = 0;
                min = ((ViewBag.pagina - 1) * 10) + 1;
                max = ViewBag.pagina * 10;
                if (max > ViewBag.total) { max = ViewBag.total; }

                int pages = 0;
                pages = ViewBag.total / 10;
                if ((ViewBag.total % 10) > 0) { pages = (pages + 1); }
                pmin = (ViewBag.pagina - 9);
                pmax = (ViewBag.pagina + 9);
                if (pmin < 0) { pmin = 1; }
                if (pmax > pages) { pmax = pages; }

            }
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @if (ViewBag.pagina > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="javascript:pagination(-1)" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Anterior</span>
                                    </a>
                                </li>
                            }
                            @for (var x = pmin; x <= pmax; x++)
                            {
                                <li class="page-item"><a href="javascript:pagination(@x)" class="page-link @(ViewBag.pagina == x ? "pagesel" : "")" href="#">@x</a></li>
                            }
                            @if (ViewBag.pagina < pages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="javascript:pagination(0)" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Próxima</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-left">
                    @if (ViewBag.total > 0)
                    {
                        @Html.Raw("Exibindo " + @min + " a " + @max + " de " + @ViewBag.total);
                    }
                    else
                    {
                        @Html.Raw("Nenhum registro encontrado");
                    }
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-right">
                    Página @ViewBag.pagina de @pages
                </div>
            </div>
            <input type="hidden" id="page" name="page" value="@ViewBag.pagina" />
            <input type="hidden" id="totalpage" name="totalpage" value="@pages" />
        </div>
    </div>
</main>


@section scripts {
    @Scripts.Render("~/bundles/alunos")
}


