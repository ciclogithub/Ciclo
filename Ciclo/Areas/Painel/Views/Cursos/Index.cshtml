@model List<Biblioteca.Entidades.Cursos>

@{
    ViewBag.Title = "Cursos";
}

<div class="tg-bgparallax">
    <div class="container">
        <div class="tg-innerbannercontent">
            <div class="tg-pagetitle">
                <h1>@Html.Action("Usuario", "Painel")</h1>
            </div>
            <ol class="tg-breadcrumb">
                <li><a href="~/Painel">Dashboard</a></li>
                <li class="tg-active">Cursos</li>
            </ol>
        </div>
    </div>
</div>

<main id="tg-main" class="tg-main tg-haslayout">
    <div class="tg-sectionspace">
        <div class="container">

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <input type="text" id="curso" name="curso" value="@ViewBag.curso" />&nbsp;<button class="tg-btn" type="button" id="pesquisa_curso">Localizar</button>
                    &nbsp;<button class="tg-btn" type="button" onclick="CursosTodos();">Todos</button>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-right">
                    <button class="tg-btn" type="button" onclick="Cursos(0);">Novo</button>
                    &nbsp;
                    <button class="tg-btn" type="button" onclick="CursoAlterar()">Alterar</button>
                    &nbsp;
                    <button class="tg-btn" type="button" onclick="CursoExcluir()">Excluir</button>
                </div>
            </div>
            <div class="row pt">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="4%">#</th>
                                <th width="2%">&nbsp;</th>
                                <th width="53%">CURSO</th>
                                <th width="23%">CATEGORIA</th>
                                <th width="18%" colspan="6">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <th scope="row"><input type="checkbox" id="ident" name="ident" value="@p.idcurso" /></th>
                                    <td class="@p.txcor.Replace(" ","_")">&nbsp;</td>
                                    <td>@p.txcurso</td>
                                    <td>@p.nome_categoria.txcategoria</td>
                                    <td onclick="CursoInstrutor(@p.idcurso)" width="3%" title="Instrutores" class="td"><i class="glyphicon glyphicon-education border-icon"></i></td>
                                    <td onclick="CursoAluno(@p.idcurso)" width="3%" title="Alunos" class="td"><i class="glyphicon glyphicon-user border-icon"></i></td>
                                    <td onclick="CursoData(@p.idcurso)" width="3%" title="Datas" class="td"><i class="glyphicon glyphicon-calendar border-icon"></i></td>
                                    @if (p.flgratuito)
                                    {
                                        <td width="3%">&nbsp;</td>
                                    }
                                    else
                                    {
                                        <td onclick="CursoValor(@p.idcurso)" width="3%" title="Valores" class="td"><i class="glyphicon glyphicon-usd border-icon"></i></td>
                                    }
                                    <td onclick="CursoAvaliacao(@p.idcurso)" width="3%" title="Avaliação" class="td"><i class="glyphicon glyphicon-star"></i></td>
                                    <td onclick="CursoFolder(@p.idcurso)" width="3%" title="Folder" class="td"><i class="glyphicon glyphicon-list-alt border-icon"></i></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            @{
                int min = 0;
                int max = 0;
                min = ((ViewBag.pagina - 1) * 10) + 1;
                max = ViewBag.pagina * 10;
                if (max > ViewBag.total) { max = ViewBag.total; }

                int pages = 0;
                pages = ViewBag.total / 10;
                if ((ViewBag.total % 10) > 0) { pages = (pages + 1); }

            }
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-left">
                    Exibindo @min a @max de @ViewBag.total
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-right">
                    Página @ViewBag.pagina de @pages
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @if (ViewBag.pagina > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous" onclick="pagination(-1)">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Anterior</span>
                                    </a>
                                </li>
                            }
                            @for (var x = 1; x <= pages; x++)
                            {
                                <li class="page-item"><a class="page-link @(ViewBag.pagina == x ? "pagesel" : "")" href="#" onclick="pagination(@x)">@x</a></li>
                            }
                            @if (ViewBag.pagina < pages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next" onclick="pagination(0)">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Próxima</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
            <input type="hidden" id="page" name="page" value="@ViewBag.pagina" />
            <input type="hidden" id="totalpage" name="totalpage" value="@pages" />
        </div>
    </div>
</main>


@section scripts {
    @Scripts.Render("~/bundles/cursos")
}


