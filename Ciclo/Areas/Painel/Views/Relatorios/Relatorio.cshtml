                                    if (p.categoria != temp)
                                    {
                                        temp = p.categoria;

                                        if (cont > 0)
                                        {
                                            @:  <tr>
                                            @:      <td style="text-align:right !important" colspan="6">TOTAL: @cont</td>
                                            @:  </tr>
                                            @: </tbody>
                                            @: </table>
                                            @: <table class="table table-bordered table-hover">
                                            cont = 0;
                                        }

                                        @: <thead>
                                        @:     <tr>
                                        @:         <th bgcolor="#ececec" colspan="6">CATEGORIA: @p.categoria</th>
                                        @:     </tr>
                                        @:     <tr>
                                        @:         <th width='1%'>&nbsp;</th>
                                        @:         <th width='34%'>CURSO</th>
                                        @:         <th width='15%'>IDENTIFICADOR</th>
                                        @:         <th width='20%'>LOCAL</th>        
                                        @:         <th width='20%'>TEMA</th>
                                        @:         <th width='10%'>Nº ALUNOS</th>
                                        @:     </tr>
                                        @: </thead>
                                        @: <tbody>
                                    }
                                    
